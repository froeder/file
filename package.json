{
    "name": "@codate/file",
    "version": "1.0.0",
    "description": "File management microservice",
    "author": "Charles Viegas <charles.viegas@codate.com.br>",
    "private": false,
    "main": "main.mjs",
    "license": "UNLICENSED",
    "keywords": [
        "microservice architecture",
        "file",
        "upload file",
        "download file",
        "thumbnail",
        "GridFS"
    ],
    "scripts": {
        "start": "node -r esm index.mjs",
        "pretest": "mongodb-runner start",
        "test": "mocha -r esm -r chai/register-expect test/**/*.mjs --exit",
        "posttest": "mongodb-runner stop",
        "quality": "eslint ./src/**/*.mjs"
    },
    "repository": {
        "type": "git",
        "url": "git@git.azi.com.br:projetosfaciles/faciles-api-file.git"
    },
    "publishConfig": {
        "registry": "http://nexus.azi.com.br/repository/azi-npm/"
    },
    "dependencies": {
        "esm": "^3.0.49",
        "@codate/commons": "^1.0.0",
        "gridfs-stream": "^1.1.1",
        "multer": "^1.3.0",
        "multer-gridfs-storage": "^3.0.1",
        "sharp": "^0.20.3",
        "speakingurl": "^14.0.1"
    },
    "devDependencies": {
        "chai": "^4.1.2",
        "eslint": "^4.19.1",
        "eslint-config-standard": "^11.0.0",
        "eslint-plugin-import": "^2.12.0",
        "eslint-plugin-node": "^6.0.1",
        "eslint-plugin-promise": "^3.8.0",
        "eslint-plugin-standard": "^3.1.0",
        "istanbul": "^0.4.5",
        "mocha": "^5.2.0",
        "mongodb-runner": "^3.6.1",
        "supertest": "^3.1.0"
    },
    "eslintConfig": {
        "root": true,
        "env": {
            "node": true
        },
        "extends": "standard",
        "rules": {
            "indent": [
                2,
                4
            ],
            "quotes": [
                2,
                "single"
            ],
            "space-before-function-paren": 0
        },
        "globals": {}
    }
}
